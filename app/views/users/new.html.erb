<% provide :title, t("static_pages.sign_up") %>
<h1><%= t("title.sign_up")%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@user), url: signup_path do |f| %>
        <%= render "shared/error_messages"%>
        <%= f.label :name, t("title.name") %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password, t("title.password") %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation,t("title.password_confirmation") %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit t("title.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
